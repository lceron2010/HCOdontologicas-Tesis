@model HC_Odontologicas.Models.Personal

@{
	ViewData["Title"] = "Edit";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4>Personal</h4>
<hr />
<div class="row">
	<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
		<form asp-action="Edit">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<input type="hidden" asp-for="Codigo" />

			<fieldset>
				<legend class="titulo text-uppercase" style="font-size:inherit">Datos del empleado</legend>
				<div class="row">
					<div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
						<div class="form-group">
							<label asp-for="Nombres" class="control-label">Nombres*</label>
							<input asp-for="Nombres" class="form-control" />
							<span asp-validation-for="Nombres" class="text-danger"></span>
						</div>
					</div>
					<div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
						<div class="form-group">
							<label asp-for="Apellidos" class="control-label">Apellidos</label>
							<input asp-for="Apellidos" class="form-control" />
							<span asp-validation-for="Apellidos" class="text-danger"></span>
						</div>
					</div>
					<div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
						<div class="form-group">
							<label asp-for="CodigoTipoIdentificacion" class="control-label">Tipo Identificacion*</label>
							<select asp-for="CodigoTipoIdentificacion" class="form-control" asp-items="ViewBag.CodigoTipoIdentificacion"></select>
						</div>
					</div>
					<div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
						<div class="form-group">
							<label asp-for="Identificacion" class="control-label">Identificación*</label>
							<input asp-for="Identificacion" class="form-control" />
							<span asp-validation-for="Identificacion" class="text-danger"></span>
						</div>
					</div>
					<div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
						<div class="form-group">
							<label asp-for="CorreoElectronico" class="control-label">Correo Electrónico*</label>
							<input asp-for="CorreoElectronico" class="form-control" />
							<span asp-validation-for="CorreoElectronico" class="text-danger"></span>
						</div>
					</div>
					<div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
						<div class="form-group">
							<label asp-for="Telefono" class="control-label">Télefono*</label>
							<input asp-for="Telefono" class="form-control" />
							<span asp-validation-for="Telefono" class="text-danger"></span>
						</div>
					</div>
					<div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
						<div class="form-group">
							<label asp-for="Celular" class="control-label">Celular</label>
							<input asp-for="Celular" class="form-control" />
							<span asp-validation-for="Celular" class="text-danger"></span>
						</div>
					</div>
					<div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
						<div class="form-group">
							<label asp-for="Direccion" class="control-label">Dirección*</label>
							<input asp-for="Direccion" class="form-control" />
							<span asp-validation-for="Direccion" class="text-danger"></span>
						</div>
					</div>

					<div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
						<div class="form-group">
							<label asp-for="CodigoCargo" class="control-label">Cargo*</label>
							<select asp-for="CodigoCargo" class="form-control" asp-items="ViewBag.CodigoCargo"></select>
						</div>
					</div>

				</div>
			</fieldset>
			<fieldset>
				<legend class="titulo text-uppercase" style="font-size:inherit">Datos de inicio de sesión</legend>
				<div class="row">
					<div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
						<div class="form-group">
							<label asp-for="CodigoPerfil" class="control-label">Perfil*</label>
							<select asp-for="CodigoPerfil" class="form-control" asp-items="ViewBag.CodigoPerfil"></select>
						</div>
					</div>
					<div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
						<div class="form-group">
							<label asp-for="NombreUsuario" class="control-label">Nombre Usuario*</label>
							<input asp-for="NombreUsuario" class="form-control" />
							<span asp-validation-for="NombreUsuario" class="text-danger"></span>
						</div>
					</div>
					<div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
						<div class="form-group">
							<label asp-for="Contrasenia" class="control-label">Contraseña*</label>
							<input asp-for="Contrasenia" class="form-control" />
							<span asp-validation-for="Contrasenia" class="text-danger"></span>
						</div>
					</div>

				</div>
			</fieldset>
			<div class="col-lg-12">
				<div class="form-group">
					<b> Activo </b>
					<label>
						<input type="checkbox" asp-for="Estado" data-toggle="toggle" data-on="Si" data-off="No" data-size="mini" data-onstyle="success" checked />
					</label>
				</div>
			</div>
			<div class="row">
				<div class="col-lg-12">
					<div class="form-group">
						<a class="btn btn-default" onclick="regresar('../Personal/Index','');">Regresar</a>
						<button type="submit" class="btn btn-primary"><i class="fa fa-save"></i> Guardar</button>
					</div>
				</div>
			</div>
		</form>
	</div>
</div>

@if (ViewBag.Message != null)
{
	<script type="text/javascript">
        window.onload = function () {
            if ("@ViewBag.Message" === "Save") {
                SuccessAlert("Guardados","/../Personal");
            }
            else {
                ErrorAlert("@ViewBag.Message");
            }
        };
	</script>
}


@section Scripts {
	@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
