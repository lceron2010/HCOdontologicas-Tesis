@model HC_Odontologicas.Models.PlantillaCorreoElectronico

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4>Plantilla Correo Electrónico</h4>
<hr />
<div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="row">
                <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
                    <div class="form-group">

                        <label asp-for="Asunto" class="control-label">Asunto *</label>
                        <input asp-for="Asunto" class="form-control" required maxlength="256"/>
                        <span asp-validation-for="Asunto" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
                    <div class="form-group">
                        <label asp-for="Cuerpo" class="control-label">Mensaje *</label>
                        <textarea asp-for="Cuerpo" class="form-control" required></textarea>
                        <span asp-validation-for="Cuerpo" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <div class="form-group">
                        <a class="btn btn-white colorBordeBotonAccion" onclick="regresar('../PlantillasCorreosElectronicos/Index','');">Regresar</a>
                        <button type="submit" class="btn btn-primary"><i class="fa fa-save"></i> Guardar</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>


@if (ViewBag.Message != null)
{
    <script type="text/javascript">
        window.onload = function () {
            if ("@ViewBag.Message" === "Save") {
                SuccessAlert("Guardados","/../PlantillasCorreosElectronicos");
            }
            else {
                ErrorAlert("@ViewBag.Message");
            }
        };
    </script>
}