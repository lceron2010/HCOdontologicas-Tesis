@model HC_Odontologicas.Models.RecetaMedica

@{
	ViewData["Title"] = "Create";
	Layout = "~/Views/Shared/_Layout.cshtml";
}
<h4>Receta Médica</h4>
<hr />
<div class="row">
	<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
		<form asp-action="Create">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<input asp-for="Codigo" class="form-control" type="hidden" />
			<input asp-for="CodigoCitaOdontologica" hidden />
			<fieldset>
				<legend class="titulo text-uppercase" style="font-size:inherit">Datos informativos</legend>
				<div class="row">
					<div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
						<div class="form-group">
							<label asp-for="CodigoPaciente" class="control-label">Paciente*</label>
							<select asp-for="CodigoPaciente" class="form-control" asp-items="ViewBag.CodigoPaciente"></select>
							<span asp-validation-for="CodigoPaciente" class="text-danger"></span>
						</div>
					</div>
					<div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
						<div class="form-group">
							<label asp-for="CodigoPersonal" class="control-label">Personal*</label>
							<select asp-for="CodigoPersonal" class="form-control" asp-items="ViewBag.CodigoPersonal"></select>
							<span asp-validation-for="CodigoPersonal" class="text-danger"></span>
						</div>
					</div>
				</div>
			</fieldset>

			<fieldset>
				<legend class="titulo text-uppercase" style="font-size:inherit">Receta Médica</legend>
				<div class="row">
					<div class="col-lg-6 col-md-12 col-sm-12 col-xs-12">
						<div class="form-group">
							<label asp-for="CodigoPlantillaRecetaMedica" class="control-label">Plantilla*</label>
							<select asp-for="CodigoPlantillaRecetaMedica" class="form-control" asp-items="ViewBag.CodigoPlantillaReceta" onchange="cargarDatosReceta(this);"></select>
							<span asp-validation-for="CodigoPlantillaRecetaMedica" class="text-danger"></span>
						</div>
					</div>
				</div>
				<div class="row">
					<div class="col-lg-6 col-md-12 col-sm-12 col-xs-12">
						<div class="form-group">
							<label asp-for="Descripcion" class="control-label">Medicamentos*</label>
							<textarea asp-for="Descripcion" class="form-control"></textarea>
							<span asp-validation-for="Descripcion" class="text-danger"></span>
						</div>
					</div>
				</div>
				<div class="row">
					<div class="col-lg-6 col-md-12 col-sm-12 col-xs-12">
						<div class="form-group">
							<label asp-for="Indicaciones" class="control-label">Indicaciones*</label>
							<textarea asp-for="Indicaciones" class="form-control"></textarea>
							<span asp-validation-for="Indicaciones" class="text-danger"></span>
						</div>
					</div>
				</div>
			</fieldset>
			<div class="row">
				<div class="col-lg-12">
					<div class="form-group">
						<a class="btn btn-white colorBordeBotonAccion" onclick="regresar('../RecetaMedica/Index','');">Regresar</a>
						<button type="submit" class="btn btn-primary"><i class="fa fa-save"></i> Guardar</button>
					</div>
				</div>
			</div>
		</form>
	</div>
</div>


@if (ViewBag.Message != null)
{
	<script type="text/javascript">
        window.onload = function () {
            if ("@ViewBag.Message" === "Save") {
                SuccessAlert("Guardados","/../RecetaMedica");
            }
            else {
                ErrorAlert("@ViewBag.Message");
            }
        };
	</script>
}
@section Scripts {
	@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
