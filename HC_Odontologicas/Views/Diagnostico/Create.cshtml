@model HC_Odontologicas.Models.Diagnostico

@{
	ViewData["Title"] = "Create";
	Layout = "~/Views/Shared/_Layout.cshtml";
}
<h4>Diagnostico</h4>
<hr />
<div class="row">
	<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
		<form asp-action="Create">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<input asp-for="Codigo" class="form-control" hidden />
			<input asp-for="CodigoCitaOdontologica" class="form-control" hidden />
			<fieldset>
				<legend class="titulo text-uppercase" style="font-size:inherit">Datos informativos</legend>
				<div class="row">
					<div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
						<div class="form-group">
							<label asp-for="CodigoPaciente" class="control-label">Paciente*</label>
							<select asp-for="CodigoPaciente" class="form-control" asp-items="ViewBag.CodigoPaciente"></select>
							<span asp-validation-for="CodigoPaciente" class="text-danger"></span>
						</div>
					</div>
					<div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
						<div class="form-group">
							<label asp-for="CodigoPersonal" class="control-label">Personal*</label>
							<select asp-for="CodigoPersonal" class="form-control" asp-items="ViewBag.CodigoPersonal"></select>
							<span asp-validation-for="CodigoPersonal" class="text-danger"></span>
						</div>
					</div>
				</div>
			</fieldset>
			<div class="row">
				<div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
					<div class="form-group">
						<label asp-for="Pieza" class="control-label"></label>
						<input asp-for="Pieza" class="form-control" />
						<span asp-validation-for="Pieza" class="text-danger"></span>
					</div>
				</div>
			</div>
			<table class="table table-hover">
				<thead>
					<tr>
						<th hidden>
							Cie10.Codigo
						</th>
						<th hidden>
							Cie10.Nombre
						</th>
						<th hidden>
							Cie10.CodigoInterno
						</th>
						<th>
							Código
						</th>
						<th class="cabeceraTabla">
							Diagnostico
						</th>
						<th class="cabeceraTabla">
						</th>
					</tr>
				</thead>
				<tbody>
					@for (int i = 0; i < Model.DiagnosticoCie10.Count; i++)
					{
					<tr>
						@*<td class="hidden">
			<input asp-for="@Model.AnamnesisEnfermedad[i].CodigoAnamnesis" />
		</td>*@
						<td hidden>
							<input asp-for="@Model.DiagnosticoCie10[i].Cie10.Codigo" />
						</td>
						<td hidden>
							<input asp-for="@Model.DiagnosticoCie10[i].Cie10.Nombre" />
						</td>
						<td hidden>
							<input asp-for="@Model.DiagnosticoCie10[i].Cie10.CodigoInterno" />
						</td>
						<td>
							@if (@Model.DiagnosticoCie10[i].Cie10 != null)
							{
								<span class="control-label">@Model.DiagnosticoCie10[i].Cie10.CodigoInterno</span>
							}
						</td>
						<td>
							@if (@Model.DiagnosticoCie10[i].Cie10 != null)
							{
								<span class="control-label">@Model.DiagnosticoCie10[i].Cie10.Nombre</span>
							}
						</td>
						<td>
							<input asp-for="@Model.DiagnosticoCie10[i].Seleccionado" type="checkbox" class="checkbox" />
						</td>
					</tr>
					}
				</tbody>

			</table>
			<div class="row">
				<div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
					<div class="form-group">
						<label asp-for="Observacion" class="control-label"></label>
						<input asp-for="Observacion" class="form-control" />
						<span asp-validation-for="Observacion" class="text-danger"></span>
					</div>
				</div>
				<div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
					<div class="form-group">
						<label asp-for="Firma" class="control-label"></label>
						<input asp-for="Firma" class="form-control" />
						<span asp-validation-for="Firma" class="text-danger"></span>
					</div>
				</div>
				<div class="form-group" hidden>
					<b> Activo </b>
					<label>
						<input type="checkbox" asp-for="Estado" data-toggle="toggle" data-on="Si" data-off="No" data-size="mini" data-onstyle="success" checked />
					</label>
				</div>
			</div>
			<div class="row">
				<div class="col-lg-12">
					<div class="form-group">
						<a class="btn btn-white" onclick="regresar('../Diagnostico/Index','');">Regresar</a>
						<button type="submit" class="btn btn-primary"><i class="fa fa-save"></i> Guardar</button>
					</div>
				</div>
			</div>
		</form>
	</div>
</div>
@if (ViewBag.Message != null)
{
	<script type="text/javascript">
        window.onload = function () {
            if ("@ViewBag.Message" === "Save") {
                SuccessAlert("Guardados","/../Diagnostico");
            }
            else {
                ErrorAlert("@ViewBag.Message");
            }
        };
	</script>
}


@section Scripts {
	@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
