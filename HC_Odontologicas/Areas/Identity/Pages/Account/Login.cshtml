@inject SignInManager<HC_Odontologicas.Models.UsuarioLogin> SignInManager
@inject UserManager<HC_Odontologicas.Models.UsuarioLogin> UserManager

@if (SignInManager.IsSignedIn(User))
{
	<script type="text/javascript">
        $("#menu").hide();        
        $("#login").hide();
        $("#titulo").hide();
	</script>
}

@{
	ViewData["Title"] = "Inicio de Sesión";
}

<div class="row">
	<div class="col-md-4">
		<section>
			<form id="acount" method="post">
				<h4>Inicio de sesión.</h4>
				<hr />
				<div asp-validation-summary="ModelOnly" class="text-danger"></div>
				<div class="form-group">
					<label asp-for="Input.UsuarioLogin">Usuario:</label>
